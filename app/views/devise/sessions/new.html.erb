<div class="container col-sm-6 mt-4">
  <h2 class="mb-4">Anmeldung</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: 'E-Mail',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: 'Passwort',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Angemeldet bleiben?", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Anmelden", class: "btn btn-dark" %>
  <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
