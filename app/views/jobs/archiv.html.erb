<div class="container mt-5">
  <h1 class="mb-4">Archivierte Anzeigen</h1>
  <% unless @jobs.nil? %>
    <div class="row jobs_index">
      <% @jobs.each do |job| %>
        <% if job.hiring == "archiv" %>
          <div class="col-sm-4">
            <%= link_to(job_path(job.id)) do %>
              <div class="jobcard">
                <h5><%= job.name %></h5>
                <p><%= User.find(job.user_id).name %> <br>
                <%= job.address %></p>
                <%= link_to "Reaktivieren", active_job_path(job.id), class: "btn btn-info",
                data: { confirm: "MÃ¶chten Sie \'#{job.name}\' wieder anzeigen?" } %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
